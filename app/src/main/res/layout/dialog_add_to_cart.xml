<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/CardView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:backgroundTint="#EFEFEF"
            android:elevation="5dp"
            android:translationZ="1dp"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/img_drink"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_Name"
                style="@style/ed_form"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:autoSizeMinTextSize="6dp"
                android:drawableStart="@drawable/ic_name"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Caffee Äen"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="SpUsage,UseCompatTextViewDrawableXml" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/ed_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_price"
                android:gravity="center_vertical"
                android:text="12000VND"
                android:textColor="#38BF08"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="SpUsage,UseCompatTextViewDrawableXml" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_des"
            style="@style/ed_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autoSizeMinTextSize="14dp"
            android:maxLines="5"
            android:text="Description"
            android:textSize="16dp"
            tools:ignore="SpUsage,UseCompatTextViewDrawableXml" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_minus" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_plus" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/ed_shape"
            android:drawableStart="@drawable/ic_price"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Total price: 0"
            android:textColor="#FF0505"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_add_to_cart"
            style="@style/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="2dp"
            android:text="ADD TO CART"
            android:textSize="22dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>